<h4 class="h4-break">Balkon</h4>

{{#if flat_data.balcony}}
<p><strong>Balkon:</strong> {{ flat_data.balcony }}</p>
{{/if}}
{{#if flat_data.balconyQuantity}}
    <p><strong>Liczba balkonów:</strong> {{flat_data.balconyQuantity}}</p>
{{/if}}
{{#if flat_data.frenchBalconyQuantity}}
    <p><strong>Liczba balkonów francuskich:</strong> {{flat_data.frenchBalconyQuantity}}</p>
{{/if}}

{{#if flat_data.terracesQuantity}}
    <p><strong>Liczba tarasów:</strong> {{flat_data.terracesQuantity}}</p>
{{/if}}

{{#if flat_data.loggiasQuantity}}
    <p><strong>Liczba loggii:</strong> {{flat_data.loggiasQuantity}}</p>
{{/if}}

{{#if flat_data.balconyDesc}}
    <p>balkon: {{flat_data.balconyDesc}}</p>
{{/if}}

{{#if flat_data.frenchBalconyDesc}}
    <p>francusk: {{flat_data.frenchBalconyDesc}}</p>
{{/if}}

{{#if flat_data.terraceDesc}}
    <p>taras: {{flat_data.terraceDesc}}</p>
{{/if}}



<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="balcony_1" name="balcony" value="1" {{#if (equals flat_ans_data.balconyAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="balcony_1">Tak</label>
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="balcony_0" name="balcony" {{#if (equals flat_ans_data.balconyAns 0)}}checked{{/if}} value="0">
        <label class="form-check-label" for="balcony_0">Nie</label>
    </div>
    {{#if (convertToStr flat_gpt_data.balconyGPT)}}
        <p class="p-break">
            <span class="gpt">GPT: {{flat_gpt_data.balconyGPT}}</span>
            <span class="gpt">GPT: {{flat_gpt_data.balcony_summary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
