<h4 class="h4-break">Piwnica</h4>
{{#if flats_db.basement}}
    <p><strong>Piwnica:</strong> {{flats_db.basement}}</p>
{{/if}}

{{#if flats_db.storageRoom}}
    <p><strong>Komórka:</strong> {{flats_db.storageRoom}}</p>
{{/if}}

{{#if flats_db.attic}}
    <p><strong>Strych:</strong> {{flats_db.attic}}</p>
{{/if}}

{{#if flats_db.basementDesc}}
    <p>piwnic: {{flats_db.basementDesc}}</p>
{{/if}}

{{#if flats_db.storageroomDesc}}
    <p>komórk: {{flats_db.storageroomDesc}}</p>
{{/if}}

{{#if flats_db.atticDesc}}
    <p>strych: {{flats_db.atticDesc}}</p>
{{/if}}

{{#if flats_db.utilityroomDesc}}
    <p>gospodarcze: {{flats_db.utilityroomDesc}}</p>
{{/if}}


<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="basement_yes" name="basement" value="1" {{#if (equals flat_ans_data.basementAns 1)}}checked{{/if}}  required>
        <label class="form-check-label" for="basement_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="basement_no" name="basement" value="0" {{#if (equals flat_ans_data.basementAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="basement_no">Nie</label>
    </div>
    {{#if (convertToStr flat_gpt_data.basementGPT)}}
        <p class="p-break">
            <span class="gpt">GPT: {{flat_gpt_data.basementGPT}}</span>
            <span class="gpt">GPT: {{flat_gpt_data.basement_summary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
