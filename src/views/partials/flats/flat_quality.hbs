<h4 class="h4-break">Standard</h4>
{{#if flat_data.flatQuality}}
    <p><strong>Standard określony przez pośrednika:</strong> {{ flat_data.flatQuality }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="quality_1" name="quality" value="1" {{#if (equals flat_ans_data.qualityAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="quality_1">Wysoki</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="quality_2" name="quality" value="2" {{#if (equals flat_ans_data.qualityAns 2)}}checked{{/if}}>
        <label class="form-check-label" for="quality_2">Przeciętny</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="quality_3" name="quality" value="3" {{#if (equals flat_ans_data.qualityAns 3)}}checked{{/if}}>
        <label class="form-check-label" for="quality_3">Niski</label>
    </div>

    {{#if (convertToStr flats_gpt_data.qualityGPT)}}
        <p class="p-break">
            <a style="text-decoration: none;" role="button">
                <span class="gpt ai-quality-rate"  onclick="replaceOneWithAIAnswer('quality')">Ocena GPT: {{flats_gpt_data.qualityGPT}}</span>
            </a>
            <br />
            <span class="gpt">Podsumowanie modelu GPT: {{flats_gpt_data.qualitySummary}}</span>
        </p>
    {{/if}}
</div>


<hr class="mt-0 mb-4">
