<h4 class="h4-break">Infrastruktura alarmowa</h4>
{{#if flat_data.monitoring}}
    <p><strong>Monitoring:</strong> {{ flat_data.monitoring }}</p>
{{/if}}

{{#if flat_data.guardedEstate}}
    <p><strong>Osiedle strze≈ºone:</strong> {{ flat_data.guardedEstate }}</p>
{{/if}}

{{#if flat_data.monitoringLemma}}
    <p style="font-style: italic;">Fragmenty: {{ flat_data.monitoringLemma }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="monitoring_yes" name="monitoring" value="1" {{#if (equals flat_ans_data.monitoringAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="monitoring_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="monitoring_no" name="monitoring" value="0" {{#if (equals flat_ans_data.monitoringAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="monitoring_no">Nie</label>
    </div>
    {{#if (convertToStr flats_gpt_data.monitoringRating)}}
        <p class="p-break">

            <a style="text-decoration: none;" role="button">
                <span class="gpt ai-monitoring-rate" onclick="replaceOneWithAIAnswer('monitoring')">Ocena GPT: {{flats_gpt_data.monitoringRating}}</span>
            </a>

            <br />
            <span class="gpt ai-monitoring-summary">Podsumowanie modelu GPT: {{flats_gpt_data.monitoringSummary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
