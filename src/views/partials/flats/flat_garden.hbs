<h4 class="h4-break">Ogród</h4>
{{#if flat_data.garden}}
    <p><strong>Ogród:</strong> {{ flat_data.garden }}</p>
{{/if}}

{{#if flat_data.gardenLemma}}
    <p style="font-style: italic;">Fragmenty: {{ flat_data.gardenLemma }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="garden_yes" name="garden" value="1" {{#if (equals flat_ans_data.gardenAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="garden_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="garden_no" name="garden" value="0" {{#if (equals flat_ans_data.gardenAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="garden_no">Nie</label>
    </div>
    {{#if (convertToStr flats_gpt_data.gardenGPT)}}
        <p class="p-break">
           <p style="font-style: italic;">Fragmenty:
                <span class="gpt ai-garden-rate" onclick="replaceOneWithAIAnswer('garden')">Ocena GPT: {{flats_gpt_data.gardenGPT}}</span>
            </a>

            <br />
            <span class="gpt ai-garden-summary">Podsumowanie modelu GPT: {{flats_gpt_data.gardenSummary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
