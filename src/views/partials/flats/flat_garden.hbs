<h4 class="h4-break">Ogród</h4>
{{#if flat_data.garden}}
    <p><strong>Ogród:</strong> {{ flat_data.garden }}</p>
{{/if}}

{{#if flat_data.gardenDesc}}
    <p>ogród: {{ flat_data.gardenDesc }}</p>
{{/if}}

{{#if flat_data.gardenDesc2}}
    <p>ogrod: {{ flat_data.gardenDesc2 }}</p>
{{/if}}

{{#if flat_data.gardenDesc3}}
    <p>działka: {{ flat_data.gardenDesc3 }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="garden_yes" name="garden" value="1" {{#if (equals flat_ans_data.gardenAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="garden_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="garden_no" name="garden" value="0" {{#if (equals flat_ans_data.gardenAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="garden_no">Nie</label>
    </div>
    {{#if (convertToStr flat_gpt_data.gardenGPT)}}
        <p class="p-break">
            <span class="gpt">GPT: {{flat_gpt_data.gardenGPT}}</span>
            <span class="gpt">GPT: {{flat_gpt_data.garden_summary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
