<h4 class="h4-break">Droga dojazdowa</h4>
<p><strong>Droga dojazdowa:</strong> {{ plot_data.accessRoad }}</p>

{{#if plot_data.roadLemma}}
    <div style="margin-bottom: 10px;"></div>
    <p style="font-style: italic;">Fragmenty: {{ plot_data.roadLemma }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="accessRoad_yes" name="accessRoad" value="1" 
            
            {{#if (equals plot_ans_data.accessRoadAns 1)}}checked{{/if}} required>
        
        <label class="form-check-label" for="accessRoad_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="accessRoad_no" name="accessRoad" value="0" 
            {{#if (equals plot_ans_data.accessRoadAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="accessRoad_no">Nie</label>
    </div>
</div>

{{#if (plots_gpt_data.accessRoadGPT)}}
    <p class="p-break">
        <a style="text-decoration: none;" role="button">
            <span class="gpt ai-technology-rate" onclick="replaceOneWithAIAnswer('rent')">Ocena GPT: {{plots_gpt_data.accessRoadGPT}}</span>
        </a>
        <br />
        <span class="gpt ai-technology-summary">Podsumowanie modelu GPT: {{plots_gpt_data.accessRoadSummary}}</span>
    </p>
{{/if}}
<hr class="mt-0 mb-4">