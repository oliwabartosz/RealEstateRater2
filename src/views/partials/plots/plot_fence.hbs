<h4 class="h4-break">Ogrodzenie</h4>
<p><strong>Ogrodzenie:</strong> {{ plot_data.fence }}</p>

{{#if plot_data.fenceLemma}}
    <div style="margin-bottom: 10px;"></div>
    <p style="font-style: italic;">Fragmenty: {{ plot_data.fenceLemma }}</p>
{{/if}}

<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="fence_yes" name="fence" value="1" 
            
            {{#if (equals plot_ans_data.fenceAns 1)}}checked{{/if}} required>
        
        <label class="form-check-label" for="fence_yes">Tak</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="fence_no" name="fence" value="0" 
            {{#if (equals plot_ans_data.fenceAns 0)}}checked{{/if}}>
        <label class="form-check-label" for="fence_no">Nie</label>
    </div>
</div>
{{#if (plots_gpt_data.fenceGPT)}}
    <p class="p-break">
        <a style="text-decoration: none;" role="button">
            <span class="gpt ai-technology-rate" onclick="replaceOneWithAIAnswer('rent')">Ocena GPT: {{plots_gpt_data.fenceGPT}}</span>
        </a>
        <br />
        <span class="gpt ai-technology-summary">Podsumowanie modelu GPT: {{plots_gpt_data.fenceSummary}}</span>
    </p>
{{/if}}
<hr class="mt-0 mb-4">