<h4 class="h4-break">Gaz</h4>
<p><strong>Gaz:</strong> {{ plot_data.gas }}</p>

{{#if plot_data.gasLemma}}
    <div style="margin-bottom: 10px;"></div>
    <p style="font-style: italic;">Fragmenty: {{ plot_data.gasLemma }}</p>
{{/if}}


<div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="gas_yes" name="gas" value="1" 
        
        {{#if (equals plot_ans_data.gasAns 1)}}checked{{/if}} required>
    
    <label class="form-check-label" for="gas_yes">Tak</label>
</div>
<div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="gas_no" name="gas" value="0" 
        {{#if (equals plot_ans_data.gasAns 0)}}checked{{/if}}>

    <label class="form-check-label" for="gas_no">Nie</label>
</div>

{{#if (plots_gpt_data.gasAnsGPT)}}
    <p class="p-break">
        <a style="text-decoration: none;" role="button">
            <span class="gpt ai-technology-rate" onclick="replaceOneWithAIAnswer('rent')">Ocena GPT: {{plots_gpt_data.gasAnsGPT}}</span>
        </a>
        <br />
        <span class="gpt ai-technology-summary">Podsumowanie modelu GPT: {{plots_gpt_data.gasAnsSummary}}</span>
    </p>
{{/if}}
<hr class="mt-0 mb-4">