<div class="table-responsive">
    <table class="table table-striped table-hover">
        <tr>
            <th onclick="sortColumn('.table.table-striped.table-hover', 0)">Lp.</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 1)">Numer oferty</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 2)">Typ oferty</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 3)">Status oferty</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 4)">Status w bazie (ocena)</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 5)">Ocenione przez</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 6)">Ocena AI</th>
            <th onclick="sortColumn('.table.table-striped.table-hover', 7)">Do usuniÄ™cia</th>
            {{#if (equals userRole "Admin")}}
            <th onclick="selectAllCheckboxes(this)">Zaznacz</th>
            {{/if}}
        </tr>


        {{#if (equals url "/flats/")}}
            {{#each flatsList}}
                <tr>
                    <td>{{this.flatNumber}}</td>
                    <td><a class="rer-link" href="{{../url}}{{this.flatNumber}}">{{this.offerId}}</a></td>
                    <td>{{this.offerType}}</td>
                    <td>{{this.offerStatus}}</td>
                    <td>{{convertRateStatusToEmoji this.rateStatus}}</td>
                    <td>
                        <div style="color: #152e52; font-style: italic;">
                            {{convertFalseToBlackSquare this.user}}
                        </div>
                    </td>
                    <td>{{convertBoolToEmoji this.status}}</td>
                    <td>{{convertBoolToEmoji this.delete}}</td>

                    {{#if (equals @root.userRole "Admin") }}
                    <td>
                        <label for="check">
                            <input class="form-check-input" type="checkbox" id="check" name="check" value="{{this.id}}">
                        </label>
                    </td>
                    {{/if}}
                </tr>
            {{/each}}
        {{/if}}
        
        {{#if (equals url "/houses/")}}
            {{#each housesList}}
                <tr>
                    <td>{{this.houseNumber}}</td>
                    <td><a class="rer-link" href="{{../url}}{{this.houseNumber}}">{{this.offerId}}</a></td>
