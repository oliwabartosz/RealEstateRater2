<h4 class="h4-break">Kuchnia</h4>
{{#if house_data.kitchenType}}
    <p><strong>Typ kuchni</strong>: {{ house_data.kitchenType}}</p>
{{/if}}

{{#if house_data.kitchenLemma}}
    <p style="font-style: italic;">Fragmenty: {{ house_data.kitchenLemma}}</p>
{{/if}}


<div class="question">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="kitchen_1" name="kitchen" value="1" {{#if (equals house_ans_data.kitchenAns 1)}}checked{{/if}} required>
        <label class="form-check-label" for="kitchen_1">Ciemna</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="kitchen_2" name="kitchen" value="2" {{#if (equals house_ans_data.kitchenAns 2)}}checked{{/if}}>
        <label class="form-check-label" for="kitchen_2">Widna</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="kitchen_3" name="kitchen" value="3" {{#if (equals house_ans_data.kitchenAns 3)}}checked{{/if}}>
        <label class="form-check-label" for="kitchen_3">Aneks</label>
    </div>
    {{#if (houses_gpt_data.kitchenGPT)}}
        <p class="p-break">
            <a style="text-decoration: none;" role="button">
                <span class="gpt ai-kitchen-rate" onclick="replaceOneWithAIAnswer('kitchen')">Ocena GPT: {{houses_gpt_data.kitchenGPT}}</span>
            </a>

            <br />
            <span class="gpt ai-kitchen-summary">Podsumowanie modelu GPT: {{houses_gpt_data.kitchenSummary}}</span>
        </p>
    {{/if}}
</div>
<hr class="mt-0 mb-4">
