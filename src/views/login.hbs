<div id="errorBox">Wpisano niepoprawne login lub hasło!</div>
<div class="container x-margin-login y-margin-login">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Logowanie</h4>
                </div>
                <div class="card-body">
                        <div class="form-group">
                            <label for="email">E-mail:</label>
                            <input type="text" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Hasło:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button onclick="sendLogin()" class="btn btn-primary btn-block" style="margin-top: 50px;">Zaloguj się</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/error-box.js"></script>
