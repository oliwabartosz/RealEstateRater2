<hr class="mt-0 mb-4">

<div class="text-center">
    {{#if (equals userRole "Admin")}}
        <div class="col-md-12 text-end" style="margin-bottom: 10px">
            <button class="btn btn-gold btn-space-list">Oce≈Ñ zaznaczone (GPT)</button>
            <button class="btn btn-red btn-space-list" onclick="deleteRecords('flats', selectedRecordsIDs())">Usu≈Ñ
                zaznaczone
            </button>
        </div>
    {{/if}}

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <tr>
                <th>Lp.</th>
                <th>Numer oferty</th>
                <th>Typ oferty</th>
                <th>Status oferty</th>
                <th>Status w bazie (ocena)</th>
                <th>Ocenione przez</th>
