{{> page/navbar }}

<h2 class="h2-break">Lista mieszkań</h2>
<hr class="mt-0 mb-4">

{{#if (equals userRole "Admin")}}
    <div class="col-md-12 text-center" style="margin-bottom: 10px">
        <button class="btn btn-secondary btn-space-list">Oceń zaznaczone</button>
        <button class="btn btn-secondary btn-space-list">Oceń wszystkie</button>
        <button class="btn btn-danger btn-space-list">Usuń zaznaczone</button>
        <button class="btn btn-danger btn-space-list">Usuń wszystkie</button>
    </div>
{{/if}}
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <tr>
            <th>Lp.</th>
            <th>Numer oferty</th>
            <th>Typ oferty</th>
            <th>Status oferty</th>
            <th>Status w bazie</th>
            <th>Ocenione przez</th>
            <th onclick="selectAllCheckboxes(this)">Zaznacz</th>
        </tr>
        {{#each flatsList}}
            <tr>
                <td>{{this.flatNumber}}.</td>
                <td><a class="rer-link" href="/flats/{{this.flatNumber}}">{{this.offerId}}</a></td>
                <td>{{this.offerType}}</td>
                <td>{{this.offerStatus}}</td>
                <td></td>
                <td></td>
                <td><input class="form-check-input" type="checkbox" id="check" name="check" value="{{this.id}}">
                </td>
            </tr>
        {{/each}}

    </table>
</div>
<script src="/assets/js/record-lists/select-all-checkboxes.js"></script>